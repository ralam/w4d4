<!DOCTYPE html>
<html>
<head>
  <title>Music</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  <%= button_to "Log out", session_url(current_user), method: :delete%>
<% else %>
  <%= button_to "Log in", new_session_url, method: :get %>
  <%= button_to "Create account", new_user_url, method: :get %>
<% end %>

<% if flash.now[:message] %>
  <%= flash.now[:message] %><br>
<% end %>

<%= yield %>

</body>
</html>
