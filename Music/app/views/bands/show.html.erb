<h1><%= @band.name %></h1>

<table style="padding-bottom: 10px">
  <tr>
    <th>Albums</th>
  </tr>
  <% @band.albums.order("id").each do |album| %>
    <tr>
      <td><%= link_to "#{album.name}", album_url(album) %></td>
    </tr>
  <% end %>
</table>
<p><%= link_to "Add an album", new_band_album_url(@band) %></p>

<p><%= link_to "Bands index", bands_url %></p>
<%= button_to "Edit band", edit_band_url, method: :get %>
<%= button_to "Delete band", band_url(@band), method: :delete %>
